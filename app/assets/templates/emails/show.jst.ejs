<div id="email-show">
<header>SUBJECT: <%= message.escape('subject') %></header>
<br>
<article>
	<div class="show-left group">
	<li id="show-from">From: <%= message.get('sender') %></li>
	<br>
	<li id="show-to">To: <%= message.get('display_recipient_emails') %></li>
	</div>
	
	<div class="show-right group">
	<li id="timestamp"><%= message.get('time_stamp') %></li>
	<% var redClass = message.get('flags').get('heart') === true ? 'red' : "" %>
	<p class="heart"><div class="heart-box <%= redClass %>">â™¥</div></p>
	</div>
	<br>
  <p id="message-body"><%= message.get('body') %></p>
</article>
</div>