
<% var unreadClass = message.get('flags').get('read') === false ? 'unread ' : "" %>
<tr class="<%= unreadClass %>">
  <td class="check">
    <input type="checkbox" name="selector[]" value="" id="selector[]">
  </td>
  <% var redClass = message.get('flags').get('heart') === true ? 'red' : "" %>
  <td class="heart <%= redClass %>" >
    <div class="heart-box">
      â™¥
    </div>
  </td>

  <% if ( message.get('sender_id') == AbeMail.userId ) { %>
    <td class="to">TO: <%= message.get('sender') %></td>
  <% } else { %>
    <td class="from"><%= message.get('display_recipient_emails') %></td>
  <% }; %>
  <td class="preview">
    <%= JST['emails/_message_preview']({ message: message}) %>
  </td>
  <td class="time-tag">
    <time datetime="ruby datetime helper method"><%= message.get('time_stamp') %></time>
  </td>

</tr>