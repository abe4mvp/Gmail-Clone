<h1><%= @user.name %></h1>

<p>Hello, dear user!</p>

<h2>sent:</h2>
<%= @sent_messages %>
<h2>received:</h2>
<%= @received_messages %>
<h2>new email</h2>

<form action="<%= messages_url %>" method="post">
  <%= render partial: "layouts/authenticity" %>
  <input type="text" name="message[recipient_attributes][]" id="message[recipient_attributes][][email_address][]" placeholder="to">
  <br>
  <input type="text" name="message[subject]" id="message[subject]" placeholder="subject">
  <br>
  <textarea name="message[body]" id="message[body]" rows="20" cols="80"><%= ("&#13;" *3).html_safe %>From, &#13; <%= @user.name  %></textarea>

  <p><input type="submit" value="Send &rarr;"></p>
</form>

<%= form_for(:message, url:{action:'create'}, html:{multipart: true}) do |f| %>
<%= render partial: "layouts/authenticity" %>

  <%= f.fields_for(:recipients) do |r| %>

    <%= r.text_field :email_address %>

  <% end %>

  <%= f.text_field :subject %>

  <%= f.text_area :body %>


  <%= f.submit "Submit" %>
<% end %>
