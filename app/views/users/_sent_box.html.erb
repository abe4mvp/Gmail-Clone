<h2>Sent:</h2>
<table class="emails" border="1">

  <% @sent_messages.each do |message| %>
    <tr class="<%= "bold" unless message.message_flags.last.read %>">
      <td>
        <input type="checkbox" name="selector[]" value="" id="selector[]">
      </td>
      <td>
        <%= '&hearts;'.html_safe if message.message_flags.first.starred %>
      </td>
      <td>
        <%= message.display_recipient_emails  %>
      </td>
      <td>
        <%= render partial: 'message_preview', locals: { message: message }%>
      </td>
      <td><%= time_tag(message.created_at, format:'%B %d, %l:%M %p') %></td>
    </tr>
  <% end %>
</table>
