<!DOCTYPE html>
<html>
<head>
  <title>abemail</title>
  <%# to add themes toggle the included css sheet here %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>



  <% if !current_user.nil? %>
<header>
  <div class="header-wrap group">

    <img src="https://s3.amazonaws.com/AbeMail/AbeMail.png" width="75" height="38" alt="AbeMail">
    <input type="text" name="search" placeholder="What are you looking for?" id="search">
    <input type="submit" value="Search">


    <ul class="header-right group">
      <li><%= current_user.name %></li>
      <li><%= button_to "Logout", session_url, :method => :delete %></li>
    </ul>


  </div>
</header>
  <% end %>


<%= yield %>

  <style>

  body {
    background-color:gray;
  }

  /* top-bar */

  .header-wrap {
    width:100%;
    height:60px;
  }

  .header-wrap img {
    height:50px;
    width:auto;
  }



  #search {
    width:590px;
    height:30px;

  }
  .header-right {
    float:right;
  }

  .header-right li {
    float:left;
  }


  /**/

  body {
    background-color:black;
    font-color:white;
  }


  /* top-bar */


  .header-wrap {
    width:100%;
    border:1px solid black;

  }

  .header-left  {

  }

  header img {
    float:left;
    margin:7px 20px 0 20px;
  }




  #search {
    width:590px;
    height:30px;
    margin-top:12px;
    font-size:12px;
  }

  .header-right {
    float:right;
  }

  .header-right li {
    float:left;
  }

  .header-right {
    height:auto;
    vertical-align:auto;
  }


  </style>




</body>
</html>

